{
    "name": "vehicle-manufacture",
    "version": "1.9.2",
    "description": "Vehicle Manufacture Sample Application used for Blockchain Developer Course V2",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "engines": {
        "node": "14.17.6",
        "npm": "6.14.15"
    },
    "scripts": {
        "lint": "tslint -c tslint.json 'src/**/*.ts'",
        "pretest": "npm run lint",
        "test": "nyc mocha -r ts-node/register src/**/*.spec.ts",
        "start": "fabric-chaincode-node start",
        "build": "tsc",
        "build:watch": "tsc -w",
        "prepublishOnly": "npm run build"
    },
    "engineStrict": true,
    "author": "Labib Farag",
    "license": "Apache-2.0",
    "dependencies": {
        "fabric-contract-api": "2.2.1",
        "fabric-shim": "2.2.1",
        "get-params": "0.1.2",
        "pkijs": "2.1.97",
        "reflect-metadata": "0.1.13",
        "uuid": "8.3.2"
    },
    "devDependencies": {
        "@types/chai": "4.2.21",
        "@types/chai-as-promised": "7.1.4",
        "@types/mocha": "9.0.0",
        "@types/node": "16.9.1",
        "@types/sinon": "10.0.2",
        "@types/sinon-chai": "3.2.1",
        "chai": "4.3.4",
        "chai-as-promised": "7.1.1",
        "fabric-network": "2.2.9",
        "mocha": "9.1.1",
        "nyc": "15.1.0",
        "sinon": "11.1.2",
        "sinon-chai": "3.7.0",
        "ts-node": "10.2.1",
        "tslint": "6.1.3",
        "winston": "3.3.3",
        "typescript": "4.4.2"
    },
    "nyc": {
        "extension": [
            ".ts",
            ".tsx"
        ],
        "exclude": [
            "coverage/**",
            "dist/**"
        ],
        "reporter": [
            "text-summary",
            "html"
        ],
        "all": true,
        "check-coverage": true,
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
    }
}
